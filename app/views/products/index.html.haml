#main
  %h3 All products

  %table.products_table
    %tr.products_header
      %th Name
      %th Description
      %th Appropriate ages
      %th Price
    - @products.each do |p|
      %tr
        %td.productname= link_to "#{p.name}", product_path(p)
        %td= p.description
        %td= p.age_range
        %td= number_to_currency(p.price)

